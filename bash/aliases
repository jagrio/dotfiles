# Shortcuts
alias aptinstall='sudo apt-get install'
alias sbh='source ~/.bashrc'
alias vbh='vim ~/.bashrc'
alias edit='vim'
alias ..='cd ..'
alias ...='cd ../../..'
alias ....='cd ../../../..'
alias .....='cd ../../../../..'
